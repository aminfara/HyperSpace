{
  "title": "HyperSpace",
  "description": "A Karabiner-Elements configuration for a hyper space layout.",
  "url": "https://github.com/aminfara/HyperSpace",
  "version": "1.0.0",
  "author": "Ali Aminfar",
  "website": "https://github.com/aminfara/HyperSpace",
  "json_url": "https://raw.githubusercontent.com/aminfara/HyperSpace/refs/heads/main/hyper-space.json",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://raw.githubusercontent.com/aminfara/HyperSpace/refs/heads/main/hyper-space.json",
  "repo": "https://github.com/aminfara/HyperSpace",
  "rules": [
    {
      "description": "HyperSpace Basics",
      "manipulators": [
        {
          "description": "space: HyperSpace (hold) | space (tap)",
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "hyper_space",
                "value": true
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "hyper_space",
                "value": false
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 100,
            "basic.to_if_alone_timeout_milliseconds": 200
          }
        },
        {
          "description": "hs + b: space",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "b",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar"
            }
          ]
        }
      ]
    },
    {
      "description": "HyperSpace Movement",
      "manipulators": [
        {
          "description": "hs + h: left",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "h",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "description": "hs + j: down",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "description": "hs + k: up",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "description": "hs + l: right",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "l",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "HyperSpace Commands",
      "manipulators": [
        {
          "description": "hs + a: select all",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "a",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + c: copy",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "c",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + x: cut",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "x",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "x",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + v: paste",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "v",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + z: undo",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "z"
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + shift + z: redo",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "z",
              "modifiers": [
                "left_shift",
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + w: close tab",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "w",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + q: quit",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "q",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hs + tab: switch window",
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "hyper_space",
              "value": true
            }
          ],
          "from": {
            "key_code": "tab",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
